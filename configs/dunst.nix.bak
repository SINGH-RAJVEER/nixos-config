{ config, pkgs, ... }:

{
  services.dunst = {
    enable = true;
    settings = {
      global = {
        width = 300;
        height = "(0, 300)";  # UPDATED
        offset = "(30, 50)";   # UPDATED
        origin = "top-right";
        transparency = 10;
        frame_color = "#89b4fa";
        font = "JetBrainsMono Nerd Font 10";
        
        timeout = 5;
        idle_threshold = 120;
        
        corner_radius = 10;
        gap_size = 5;
        separator_height = 2;
        padding = 15;
        horizontal_padding = 15;
        
        format = "<b>%s</b>\\n%b";
        alignment = "left";
        vertical_alignment = "center";
        markup = "full";
        
        icon_position = "left";
        min_icon_size = 32;
        max_icon_size = 64;
        
        progress_bar = true;
        progress_bar_height = 10;
        progress_bar_frame_width = 1;
        progress_bar_min_width = 150;
        progress_bar_max_width = 300;
      };
      
      urgency_low = {
        background = "#1e1e2e";
        foreground = "#cdd6f4";
        frame_color = "#89b4fa";
        timeout = 5;
      };

      urgency_normal = {
        background = "#1e1e2e";
        foreground = "#cdd6f4";
        frame_color = "#89b4fa";
        timeout = 10;
      };
 
      urgency_critical = {
        background = "#1e1e2e";
        foreground = "#f38ba8";
        frame_color = "#f38ba8";
        timeout = 0;
      };
    };
  };
}

